<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authen"
    android:id="@+id/contentContainer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/mypic5" />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="45dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_profile"
        android:layout_centerHorizontal="true"
        android:text="Name"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="284dp" />

        <Button
            android:id="@+id/cycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_gravity="center"
            android:layout_marginTop="57dp"
            android:background="#00BFFF"
            android:text="Go to list animal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="360dp" />

        <Button
            android:id="@+id/chart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cycle_view"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:background="#00BFFF"
            android:text="Go to chart animal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="481dp" />

        <Button
            android:id="@+id/login_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_gravity="center"
            android:layout_marginTop="203dp"
            android:text="logout"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="567dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>